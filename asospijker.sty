%\def\sets#1{\@for\tmp:=#1\do{$\circ$~~\tmp\\}}%

\newcounter{dummy}

\def\sets#1{
    \setcounter{dummy}{0}%
    \foreach \n [count=\ni] in #1 {%
        \stepcounter{dummy}%
    }%
    \foreach \n [count=\ni] in #1 {%
        \ifnum\ni<\value{dummy}%
            {$\circ$~~\n\par\vspace{.32ex}}%
        \else%
            $\circ$~~\n%
        \fi%
    }%
}

